<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Login">

    <ImageView
        android:id="@+id/logo_goeltix"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/goeltix" />

    <TextView
        android:id="@+id/login"
        android:layout_below="@id/logo_goeltix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="L O G I N"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />



    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_light"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:hint="Masukan Username Anda"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:backgroundTint="#D54D35"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:fontFamily="@font/poppins_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:hint="Masukan Password Anda"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:backgroundTint="#D54D35"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"/>


    <CheckBox
        android:id="@+id/checkbox_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="Remember Me"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="15dp"
        android:text="Forgot password?"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Login"
        android:fontFamily="@font/poppins_extrabold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot_pass"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:backgroundTint="#D54D35"
        tools:ignore="RtHardcoded"/>


    <TextView
        android:id="@+id/registrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:text="Don't have an account? Register here"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

</RelativeLayout>